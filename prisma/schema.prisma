generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Scholar {
  id                   Int      @id @default(autoincrement())
  nama_beasiswa        String   @db.VarChar(255)
  kategori             String   @db.VarChar(255)
  deskripsi            String   @db.VarChar(255)
  persyaratan_beasiswa String   @db.VarChar(255)
  kontak               String   @db.VarChar(255)
  tanggal_mulai        DateTime @db.DateTime(0)
  tanggal_akhir        DateTime @db.DateTime(0)
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String
}

